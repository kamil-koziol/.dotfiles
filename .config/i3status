# i3status configuration file.
# see "man i3status" for documentation.

general {
    colors = true
    interval = 5
    color_good = "#ffffff"
    color_degraded = "#ffffff"
    color_bad = "#ffffff"
}

order += "cpu_usage"
order += "memory"
order += "disk /"
order += "volume master"
order += "tztime local"

cpu_usage {
    format = "  CPU: %usage "
}

volume master {
    format = "   Vol: %volume "
    format_muted = "   Vol: Muted "
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

memory {
    format = " 󰍛 RAM: %used "
    threshold_degraded = "80%"
}

disk "/" {
    format = "  Disk: %avail "
    threshold_type = "percentage"
    low_threshold = 10
}

tztime local {
    format = "  %d-%m-%Y %H:%M "
}
